#include<iostream>
#include<stack>
#include<string.h>
using namespace std;
int mat[1100][1100];
int main()
{
        
    while(1)
    {
              char a[1100];
             
              scanf("%s",a);
              if(a[0]=='Q')
              break;
              memset(mat,0,sizeof(mat));
            //  stack<char>updown;
             // stack<char>leftright;
              int i=0,X=550,Y=550,count=0;
              while(a[i]!='Q')
              {
                              
                     mat[X][Y]=1;         
                     if(a[i]=='U')
                           Y++;
                           
                     if(a[i]=='D')
                        Y--;     
                        
                     if(a[i]=='R')
                     X++;
                     
                     if(a[i]=='L')
                     X--;
                     
                     if(mat[X][Y]==1)
                     count++;
                    
                     i++;
                   //  cout<<"X="<<X<<" Y="<<Y<<" count="<<count<<" i="<<i<<endl;
              }
              printf("%d\n",count);
    }
    return 0;
}


