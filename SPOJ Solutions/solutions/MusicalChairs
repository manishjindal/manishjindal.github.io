#include <stdio.h>
 
int josephus(int n, int k)
{
    int i,r;
  r = 0;
    i = 1;
    while (i <= n){
      r = (r + k) % i;
      i+= 1;}
    return r+1;
}
 
// Driver Program to test above function
int main()
{
  int n,d;
  while(1)
  {
           scanf("%d%d",&n,&d);
           if(n==0 && d==0)
           break;
           printf("%d %d %d\n",n,d,josephus(n, d));
          
  }
  return 0;
}

